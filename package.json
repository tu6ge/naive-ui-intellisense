{
  "name": "naive-ui-intellisense",
  "displayName": "Naive UI IntelliSense",
  "description": "LSP-based IntelliSense for Naive UI components",
  "version": "0.2.0",
  "author": {
    "name": "tu6ge",
    "email": "tu6ge@qq.com",
    "url": "https://github.com/tu6ge"
  },
  "publisher": "tu6ge",
  "license": "MIT",
  "icon": "naivelogo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu6ge/naive-ui-intellisense.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vue"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Naive UI IntelliSense",
      "properties": {
        "naiveUI.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Naive UI IntelliSense"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "download":"cd server && npm run download",
    "build": "npm run build:client && npm run build:server && rollup -c",
    "build:client": "tsc -p client/tsconfig.json",
    "build:server": "tsc -p server/tsconfig.json",
    "build:prod": "NODE_ENV=production rollup -c",
    "watch": "rollup -c -w",
    "compile": "npm run build",
    "package": "vsce package",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "rollup": "^3.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
