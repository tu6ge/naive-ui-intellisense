{
  "name": "naive-ui-intelligence",
  "displayName": "Naive UI IntelliSense",
  "version": "0.1.11",
  "description": "Document Hover Tips And Autocomplete Tools.",
  "author": {
    "name": "tu6ge",
    "email": "tu6ge@qq.com",
    "url": "https://github.com/tu6ge"
  },
  "publisher": "tu6ge",
  "license": "MIT",
  "icon": "naivelogo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu6ge/naive-ui-intellisense.git"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Naive UI Config",
      "properties": {
        "naive-ui-intellisense.language": {
          "type": "string",
          "default": "zh-CN",
          "description": "Document Language of Navie UI",
          "enum": [
            "zh-CN",
            "en-US"
          ]
        },
        "NaiveClient.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "watch": "yarn rollup --config ./rollup.config.js -w",
    "pretest": "yarn lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commit": "git-cz",
    "docs": "node ./src/document/document-builder.js",
    "package": "vsce package",
    "build": "yarn rollup --config ./rollup.config.js"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/glob": "^9",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "1.50.0",
    "commitizen": "^4.2.3",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-cli": "^2.1.1",
    "glob": "^9",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "rollup": "^2.56.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5",
    "vsce": "^2",
    "vscode-test": "^1.5.0",
    "yorkie": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gitHooks": {
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint"
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
